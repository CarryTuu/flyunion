<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n%throwable"/>
		</Console>
		<File name="File" fileName="E:\CODE\SpringBoot\FlyUnion\logs\sqlite.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n%throwable"/>
		</File>
	</Appenders>

	<Loggers>
		<!-- Root logger option 1: log all levels to the console and file -->
		<Root level="info">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Root>

		<!-- MyBatis logging configuration -->
		<Logger name="org.apache.ibatis" level="debug" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Logger>

		<Logger name="org.mybatis.spring" level="debug" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Logger>

		<!-- Spring Boot logging configuration -->
		<Logger name="org.springframework" level="info" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Logger>

		<!-- For detailed error logging -->
		<Logger name="org.springframework.boot" level="error" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Logger>

		<!-- If you want to log SQL statements with parameters and results -->
		<Logger name="java.sql.Connection" level="debug" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Logger>
		<Logger name="java.sql.Statement" level="debug" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Logger>
		<Logger name="java.sql.PreparedStatement" level="debug" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Logger>
	</Loggers>
</Configuration>